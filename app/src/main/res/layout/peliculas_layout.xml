<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/IDPelicula"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivContactImagePelicula"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/lblTituloPelicula"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingTop="40dp"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/ivContactImagePelicula"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/lblGenero"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:gravity="left"
        android:paddingLeft="3dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/lblTituloPelicula"
        android:layout_toRightOf="@+id/ivContactImagePelicula"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/lblDuracion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:gravity="right"
        android:paddingRight="3dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/lblGenero"
        android:layout_toRightOf="@+id/ivContactImagePelicula"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:typeface="sans"/>

</RelativeLayout>